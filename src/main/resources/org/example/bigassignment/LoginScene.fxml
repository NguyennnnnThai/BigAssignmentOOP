<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.bigassignment.LoginSceneController">
   <children>
      <Label layoutX="58.0" layoutY="113.0" prefHeight="48.0" prefWidth="145.0" text="username: ">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <Button fx:id="loginButton" layoutX="272.0" layoutY="278.0" mnemonicParsing="false" onAction="#loginButtonAction" text="login" />
      <TextField fx:id="usernameTextField" layoutX="204.0" layoutY="124.0" onAction="#loginButtonAction" promptText="username" />
      <Button fx:id="exitButton" layoutX="272.0" layoutY="324.0" mnemonicParsing="false" onAction="#exit" text="close" />
      <Button layoutX="160.0" layoutY="300.0" onAction="#openRegisterScene" text="Đăng Ký" />
      <Label layoutX="58.0" layoutY="150.0" prefHeight="48.0" prefWidth="145.0" text="password: ">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <PasswordField fx:id="passwordTextField" layoutX="204.0" layoutY="161.0" onAction="#loginButtonAction" promptText="password" />
      <TextField fx:id="passwordVisibleTextField" layoutX="204.0" layoutY="161.0" promptText="password" visible="false" />
      <Button text="👁" layoutX="420.0" layoutY="161.0" onAction="#togglePasswordVisibility" />

      <Label fx:id="loginMessageLabel" layoutX="62.0" layoutY="211.0" onDragDetected="#loginButtonAction" prefHeight="48.0" prefWidth="421.0">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
